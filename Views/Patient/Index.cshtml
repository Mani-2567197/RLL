@using DataProvider;
@model IEnumerable<Doctor>

@{
    ViewBag.Title = "Index";
   
}

<script type="text/javascript">function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    window.onunload = function () { null };</script>
<ol class="breadcrumb">
    <li class="breadcrumb-item active">Browse Doctor:</li>
</ol>

<div class="container" style="padding: 20px 20px 20px 20px; background-color: aquamarine;">
    <form method="post">
        <fieldset>
            <legend>Search Doctor By Specialization</legend>
            <div class="form-group row">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">Search Doctor</span>
                    </div>
                    <input type="text" class="form-control" placeholder="Enter Specialization" id="txtspname" name="txtspname" aria-label="Specialization" aria-describedby="basic-addon1" required>
                    <div class="input-group-append">
                        <button class="btn btn-success ml-1" type="submit" id="button-addon2">Search</button>
                    </div>
                    <div class="input-group-append">
                        <a class="btn btn-primary ml-1" href="/Patient/Index" type="button" id="button-addon2">View All Doctor</a>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Doctor Id</th>
                <th scope="col">Name</th>
                <th scope="col">Specialization</th>
                <th scope="col">Timing</th>
                <th scope="col">Book Appointment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Doctor item in Model.ToList())
            {
                <tr class="table-dark">
                    <th scope="row">@item.DoctorId</th>
                    <td>@item.User.Name</td>
                    <td>@item.Specialization.SpecializationName</td>
                    <td>@item.Timings</td>
                    <td>
                        <form action="/Patient/AddAppointment/@item.UserId" method="post">
                            <button type="submit" class="btn btn-outline-success">Book Appointment</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
