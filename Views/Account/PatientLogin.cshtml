
@{
    ViewBag.Title = "PatientLogin";
}

<!DOCTYPE html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
      <link rel="stylesheet" href="~/css/Login.css" />
    <script rel="text/json" src="~/js/Captcha.js"></script>
</head>

<body>
    <div class="main">
        <div class="col-md-6 col-sm-12">

            <img class="log">
            <div class="loginbox">
                <img src="~/images/login.png" class="avatar">
                <h1>Login </h1>
                <form action="" method="post">
                    <p> Email</p>
                    <input type="email" id="inputEmail" name="inputEmail" placeholder="Enter Email" required>
                    <p> Password</p>
                    <input type="password" id="inputPassword" name="inputPassword" placeholder="Enter Password" required><br>
                    <label>Enter Catcha</label>
                    <br />
                    <input type="hidden" id="captcha-result" />
                    <label id="captcha-question" class="mt-2"></label>
                    <input type="number" id="user-captcha" required placeholder="Enter result "><br><br>
                    <div class="form-group w-100 text-center">
                        <button type="submit" class="btn btn-success" onclick="validateCaptcha()">Submit</button>
                    </div>
                    <center><h6>Don't have an account?</h6></center><br />
                    <h1><b>@Html.ActionLink("Register", "AddPatient")</b></h1>
                    
                        <center> @Html.ActionLink("Reset Password", "ForgetPassword")</center>
                 
                    @if (Session["Invalid"] == null)
                    {
                        Session["Invalid"] = false;
                    }
                    @if ((bool)Session["Invalid"])
                    {
                        <div class="form-group">
                            <div class="alert alert-dismissible alert-danger">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <strong>Invalid Email or Password!!</strong>
                            </div>
                        </div>
                    }

                </form>
            </div>



        </div>
    </div>
    <script>

        generateCaptcha();
    </script>
</body>




