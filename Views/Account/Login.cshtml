@{
    ViewBag.Title = "Login";
}


<!DOCTYPE html>
<html>
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <link href="~/css/Login.css" rel="stylesheet" />
    <script src="~/js/Captcha.js"></script>

</head>
<body>
    <div class="topnav">
        <!-- Your navigation content here -->
    </div>

    <div class="main">
        <img class="log">
        <div class="loginbox">
            <img src=" https://cdn1.vectorstock.com/i/1000x1000/82/55/anonymous-user-circle-icon-vector-18958255.jpg" class="avatar">
            <div class="reset" width="12px; height=" 15px;>
                <h1>Login</h1>
            </div>
            <form action="" method="post">
                <space>

                    <p> <b> Email</b></p>

                </space>
                <div class="textbox">
                    <space> <input type="email" id="inputEmail" name="inputEmail" size="30" placeholder="Enter Email" required></space>
                    <space>
                        <p><b>Password</b></p>
                    </space>

                    <input type="password" id="inputPassword" name="inputPassword" class="text-white" size="30" placeholder="Enter Password" required><br>
                </div>
                <div>

                    <label>Enter Captcha</label>
                    <br />
                    <input type="hidden" id="captcha-result" />
                    <label id="captcha-question" class="mt-2"></label>
                    <input type="number" id="user-captcha" required placeholder="Enter result "><br><br>
                </div>


                <div class="button-container">
                    <button type="submit" class="btn btn-success" onclick="return generateCaptcha();">Login</button>

                </div>
                <div class="reset">
                    <left> @Html.ActionLink("Reset Password", "ForgetPassword")</left>
                </div>

                @if (Session["Invalid"] == null)
                {
                    Session["Invalid"] = false;
                }
                @if ((bool)Session["Invalid"])
                {
                    <div class="form-group">
                        <div class="alert alert-dismissible alert-danger">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>Invalid Email or Password!!</strong>
                        </div>
                    </div>
                }
            </form>
        </div>
    </div>
    <script>generateCaptcha();</script>
</body>
</html>