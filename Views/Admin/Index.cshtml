@using DataProvider;
@model IEnumerable<User>

@{
    ViewBag.Title = "Index";
   
}


<link rel="stylesheet" href="~/css/AdminIndex.css" />
<script type="text/javascript">
    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    window.onunload = function () { null };</script>
<ol class="breadcrumb">
    <li class="breadcrumb-item active"></li>
</ol>

<div class="container">
    <form method="post">
        <fieldset>
            <legend>View All Users:</legend>
            <div class="form-group row">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">Search User</span>
                    </div>
                    <input type="text" class="form-control" placeholder="Enter Name" id="textUserName" name="textUserName" aria-label="User" aria-describedby="basic-addon1" required>
                    <div class="input-group-append">
                        <button class="btn btn-success ml-1" type="submit" id="button-addon2">Search</button>
                    </div>
                    <div class="input-group-append">
                        <a class="btn btn-primary ml-1" href="/Admin/Index" type="button" id="button-addon2">View All Users</a>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">User ID</th>
                <th scope="col">Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">DOB</th>
                <th scope="col">Gender</th>
                <th scope="col">Email</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Role Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (User item in Model.ToList())
            {
                <tr class="table-secondary">
                    <th scope="row">@item.UserId</th>
                    <td>@item.Name</td>
                    <td>@item.Phone</td>
                    <td>@item.Address</td>
                    <td>@item.DOB.ToString("dd-MM-yyyy")</td>
                    <td>@(item.Gender)</td>
                    <td>@(item.Email)</td>
                    <td>@(item.Phone)</td>
                    <td>@(item.Role.Name)</td>
                </tr>
            }

        </tbody>
    </table>
</div>


